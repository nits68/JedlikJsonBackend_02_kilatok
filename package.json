{
    "name": "jedlik-json-backend-server",
    "version": "1.0.0",
    "description": "Jedlik Json-Backend-Server for exams",
    "main": "src/backend.ts",
    "type": "commonjs",
    "repository": {
        "private": false,
        "type": "git",
        "url": "https://github.com/nits68/JedlikJsonBackend.git"
    },
    "scripts": {
        "start": "node ./dist/backend.js",
        "compile": "tsc & copyfiles db_*.json dist/",
        "postinstall": "tsc & copyfiles db_*.json dist/",
        "kill": "taskkill /im node.exe /F",
        "test": "jest || ECHO.",
        "dev": "nodemon"
    },
    "author": "Nits László",
    "license": "MIT",
    "dependencies": {
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.2",
        "@typescript-eslint/eslint-plugin": "^8.4.0",
        "@typescript-eslint/parser": "^8.4.0",
        "copyfiles": "^2.4.1",
        "eslint": "^9.9.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "jest": {
        "roots": [
            "<rootDir>/src"
        ],
        "preset": "ts-jest",
        "verbose": true,
        "testEnvironment": "node",
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json",
            "node"
        ],
        "collectCoverage": true,
        "coverageDirectory": "coverage",
        "collectCoverageFrom": [
            "src/**/*.{ts,js}",
            "!src/**/*.d.ts"
        ]
    }
}
